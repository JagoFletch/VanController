{
  "name": "van-controller",
  "version": "0.1.0",
  "description": "Raspberry Pi touch screen controller for campervan electronics",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"webpack serve --mode development\" \"electron .\"",
    "build": "webpack --mode production && electron-builder",
    "build:pi": "webpack --mode production && electron-builder --linux"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@electron/remote": "^2.0.10",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^25.1.0",
    "electron-builder": "^24.4.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^4.0.0",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.vancontroller.app",
    "productName": "VanController",
    "files": [
      "dist/**/*",
      "src/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
